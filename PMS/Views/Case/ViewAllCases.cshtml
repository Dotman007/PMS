@model IEnumerable<PMS.Models.Case>

@{
    ViewBag.Title = "ViewAllCases";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-center text-capitalize">View AllCases</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prisoner.PrisonerRegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JudgeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scheduled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prisoner.PrisonerRegNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JudgeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourtName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Scheduled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CaseId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CaseId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CaseId })
        </td>
    </tr>
}

</table>
