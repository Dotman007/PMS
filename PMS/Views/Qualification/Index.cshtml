@model IEnumerable<PMS.Models.Qualification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Qualification's List</h2>

@if(Model.Count() == 0)
{
    <div>
        <h3>No Qualification have been Added Yet</h3>
    </div>
}
else
{
    
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QualificationName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QualificationName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QualificationId }) |
                @Html.ActionLink("Details", "Details", new { id = item.QualificationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QualificationId })
            </td>
        </tr>
    }

</table>
}