@model PMS.Models.Employee

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .page-head-line {
        font-weight: 900;
        padding-bottom: 20px;
        border-bottom: 2px solid #F0677C;       
        text-transform: uppercase;
        color: #F0677C;
        font-size: 20px;
        margin-bottom: 40px;
        font-family:'Trebuchet MS'
    }
</style>

<br />
<br />
<br />
<br />
<br />
<br />
<div class="col-md-4">
</div>
<div class="col-md-4">
    <div class="panel panel-info">
        <div class="panel-heading text-center" style="text-transform: uppercase;font-weight:bolder">Employee Login</div>
        <div class="panel-body">

            @using (Html.BeginForm("Login", "Employee", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 style="color: red; text-align: center">@ViewBag.ApplicantNotExist</h4>
                    @Html.ValidationSummary(true)



                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control",@placeholder="Username" })
                            <h6 class="text-danger">@ViewBag.RegNoEmpty</h6>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control",@placeholder="Password" })
                            <h6 class="text-danger">@ViewBag.PasswordEmpty</h6>
                            
                            
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success">
                                Login <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                            </button>
                        </div>
                        
                </div>
            
            </div>
            }
        </div>
                
    </div>
</div>
              
            

