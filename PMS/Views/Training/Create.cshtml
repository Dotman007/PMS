@model PMS.Models.Training

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Training</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TrainingTypeId, "Training Type", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TrainingTypeId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrainingTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.PrisonerId, "Reg No.", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PrisonerId", null, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.PrisonerId)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Train Prisoner" class="btn btn-info" />
            </div>
        </div>
    </div>
}

