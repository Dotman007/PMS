@model IEnumerable<PMS.Models.Prisoner>

@{
    ViewBag.Title = "ViewPrisonerss";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>ViewPrisonerss</h2>


<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Crime.CrimeName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Prison.PrisonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification.QualificationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Genotype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Crime.CrimeName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Prison.PrisonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification.QualificationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State.StateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Genotype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodGroup)
        </td>
        <td>
            @Html.ActionLink("Add To Training", "Create","Training", new { id = item.PrisonerId }, new { @class="btn btn-success"})
          
        </td>
    </tr>
}

</table>
