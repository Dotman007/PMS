@model IEnumerable<PMS.Models.Training>

@{
    ViewBag.Title = "ViewTrainingProgress";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>ViewTrainingProgress</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
          Employee Name
        </th>
        <th>
            Prisoner First Name
        </th>
        <th>
           Training Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.DisplayFor(modelItem => item.Employee.EmployeeType.EmployeeTypeName)  @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prisoner.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingType.TrainingTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
       
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.TrainingId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TrainingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TrainingId })*@
        </td>
    </tr>
}

</table>
