@model PMS.Models.Case

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-center">Schedule Court Case</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CaseName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CaseName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CaseName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CaseDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CaseDate, new { @placeholder = "mm/dd/yyyy hh:mm", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CaseDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CaseDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CaseDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CaseDescription)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.JudgeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.JudgeName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JudgeName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourtName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CourtName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourtName)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Prisoner.PrisonerRegNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PrisonerRegNo", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Prisoner.PrisonerRegNo)
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Schedule" class="btn btn-info" />
            </div>
        </div>
    </div>
}


