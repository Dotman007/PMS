@model PMS.Models.Prisoner

@{
    ViewBag.Title = "TrainPrisoner";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>TrainPrisoner</h2>
@ViewBag.Success

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

       
       
        <div class="form-group">
            @Html.LabelFor(model => model.TrainingTypeId, "Training Type", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("TrainingTypeId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrainingTypeId)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Train" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
