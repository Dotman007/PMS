@model PMS.Models.Training

@{
    ViewBag.Title = "AddToTraining";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Training Registration</h2>
<br />

<h2>@ViewBag.Success</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Training</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TrainingTypeId, "Training Type", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TrainingTypeId", null, new { @class="form-control col-md-4",@placeholder="Specify Training Type"})
                @Html.ValidationMessageFor(model => model.TrainingTypeId)
            </div>
        </div>

        

       

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control col-md-4", @placeholder = "mm/dd/yyyy" })
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add To Training" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
