                    @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.PhoneNo)
                </div>

            </div>
        </div>
        <div class="form-group form-horizontal col-md-6" style="background-color:#ffffff">
            <div class="form-group">
                @Html.LabelFor(model => model.NextOfKin, "Next of Kin", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.NextOfKin, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.NextOfKin)
                </div>
            </div>

