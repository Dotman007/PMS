                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.MotherAddress, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(model => model.MotherAddress)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FatherAddress, "Father's Address", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.FatherAddress, new { @class = "form-control col-md-4" })
