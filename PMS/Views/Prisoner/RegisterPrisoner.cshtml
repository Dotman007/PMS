        <div class="form-group" style="text-align:center">
            <div class="col-md-4 col-md-12">
                <input type="submit" value="Regsiter" class="btn btn-success" />
            </div>
        </div>
        </div>

    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
