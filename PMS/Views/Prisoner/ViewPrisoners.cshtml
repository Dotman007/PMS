@model IEnumerable<PMS.Models.Prisoner>

@{
    ViewBag.Title = "ViewPrisoners";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>ViewPrisoners</h2>

@if(Model.Count() == 0)
{
    <div>
        <h2>No Prisoners Added Yet</h2>
    </div>
}
else
{
    

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Crime.CrimeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification.QualificationName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        
       
        <th>
            @Html.DisplayNameFor(model => model.Genotype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Crime.CrimeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.EmployeeType.EmployeeTypeName) @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification.QualificationName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Genotype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodGroup)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PrisonerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PrisonerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PrisonerId })
        </td>
    </tr>
}

</table>
}