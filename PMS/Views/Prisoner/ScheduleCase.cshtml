@model PMS.Models.Case

@{
    ViewBag.Title = "ScheduleCase";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>ScheduleCase</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Case</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CaseName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CaseName)
                @Html.ValidationMessageFor(model => model.CaseName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CaseDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CaseDate)
                @Html.ValidationMessageFor(model => model.CaseDate)
            </div>
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.JudgeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JudgeName)
                @Html.ValidationMessageFor(model => model.JudgeName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourtName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CourtName)
                @Html.ValidationMessageFor(model => model.CourtName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CaseDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CaseDescription)
                @Html.ValidationMessageFor(model => model.CaseDescription)
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.CaseNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CaseNo)
                @Html.ValidationMessageFor(model => model.CaseNo)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.CaseTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CaseTime)
                @Html.ValidationMessageFor(model => model.CaseTime)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

